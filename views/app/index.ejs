        If necessary, shut down and then lift your app again.

        -->

		<noscript>
			<link rel="stylesheet" href="styles/skel-noscript.css" />
			<link rel="stylesheet" href="styles/style.css" />
			<link rel="stylesheet" href="styles/style-desktop.css" />
		</noscript>

		<!--[if lte IE 9]><link rel="stylesheet" href="styles/ie9.css" /><![endif]-->
		<!--[if lte IE 8]><script src="/js/html5shiv.js"></script><link rel="stylesheet" href="styles/ie8.css" /><![endif]-->
		<!--[if lte IE 7]><link rel="stylesheet" href="styles/ie7.css" /><![endif]-->
    </head>

    <body>
        <!-- Header - ->
			<header id="header">
				<div class="logo">
					<div>
						<h1><a href="/" id="logo"><%= title %></a></h1>
						<span class="byline"><%= i18n("Invoice management") %></span>
					</div>
				</div>
			</header>
		<!-- /Header -->

		<!-- Nav -->
			<nav id="nav" class="skel-panels-fixed">
				<ul>
					<li class="current_page_item"><a href="#!/"><%= i18n('Dashboard') %></a></li>
					<li><a href="#!/task"><%= i18n('Clients') %></a></li>
					<li><a href="#!/invoice"><%= i18n('Invoices') %></a></li>
					<li><a href="#!/client"><%= i18n('Settings') %></a></li>
					<li><a href="/logout"><%= i18n('Logout') %></a></li>
				</ul>
			</nav>
		<!-- /Nav -->
        <!-- Include the view file for the current controller/route -->

        		<!-- Main -->
			<div id="main-wrapper">
				<div id="main" class="container">
					<div class="row">
						<div class="9u">
                            <section class="login is-highlight" id="rgnTaskList">
                                <p> Tasklist will be here <i class="fa fa-envelope solo"></i> </p>
                            </section>
                        </div>
                        <div class="3u">
                            <aside id="rgnUserData">Userdata</aside>
                            <aside id="rgnBusinessData">Businessdata</aside>
                        </div>
                    </div>
                </div>
            </div>
        <!-- /  Main -->

        <!-- Footer -->
			<footer id="footer" class="container">
				<div class="row">
					<div class="12u">

						<!-- Contact -->
							<section>
								<h2 class="major"><span>Get in touch</span></h2>
								<ul class="contact">
									<li><a class="fa fa-facebook solo" href="#"><span>Facebook</span></a></li>
									<li><a class="fa fa-twitter solo" href="http://twitter.com/n33co"><span>Twitter</span></a></li>
									<li><a class="fa fa-rss solo" href="http://n33.co/feed/"><span>RSS</span></a></li>
									<li><a class="fa fa-dribbble solo" href="http://dribbble.com/n33"><span>Dribbble</span></a></li>
									<li><a class="fa fa-linkedin solo" href="#"><span>LinkedIn</span></a></li>
									<li><a class="fa fa-google-plus solo" href="#"><span>Google+</span></a></li>
								</ul>
							</section>
						<!-- /Contact -->

					</div>
				</div>

				<!-- Copyright -->
					<div id="copyright">
						&copy; Untitled Something | Images: <a href="http://fotogrph.com">fotogrph</a> | Design: <a href="http://html5up.net/">HTML5 UP</a>
					</div>
				<!-- /Copyright -->

			</footer>
		<!-- /Footer -->


        <!--

        Client-side Javascript
        ========================

        You can import any js files in your `assets` directory as you would
        normally: using <script></script> tags.

        Here's an example of importing a few dependencies, in order:
        -->

        <!-- Bring in the socket.io client -->
        <script type="text/javascript" src="/js/socket.io.js"></script>
        <!-- then beef it up with some convenience logic for talking to Sails.js -->
        <script type="text/javascript" src="/js/sails.io.js"></script>
        <!-- listen on socket.io for incoming messages -->
        <script type="text/javascript" src="/js/app.js"></script>

        <!-- scripts from theme -->
		<script type="text/javascript" src="/js/jquery.min.js"></script>
		<script type="text/javascript" src="/js/config.js"></script>
		<script type="text/javascript" src="/js/skel.min.js"></script>
		<script type="text/javascript" src="/js/skel-panels.min.js"></script>


        <!-- scripts for the backbone SPA -->
        <script type="text/javascript" src="/js/json2.js"></script>
        <script type="text/javascript" src="/js/underscore-min.js"></script>
        <script type="text/javascript" src="/js/backbone.js"></script>
        <script type="text/javascript" src="/js/backbone.marionette.js"></script>
        <script type="text/javascript" src="/js/backbone.babysitter.js"></script>
        <script type="text/javascript" src="/js/backbone.wreqr.js"></script>
        <script type="text/javascript" src="/js/handlebars-v1.3.0.js"></script>

        <!-- the templates-->
        <script type="text/x-handlebars-template" id="tplUserData">
        <h3>{{name}}</h3>
        {{#if contact}}
            <ul>
            {{#each contact}}
                <li>{{#if icon}}<i class="fa fa-{{{icon}}}"></i>{{else}}{{name}}:{{/if}} <b>{{value}}</b></li>
            {{/each}}
            </ul>
        {{/if}}
        </script>
        <script type="text/x-handlebars-template" id="tplBusinessData">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        </script>
        <script type="text/x-handlebars-template" id="tplTaskList">
        <h2 class="major"><span>Tasks</span></h2>
        <div id="taskListControls"><a href="#" class=""><i class="fa fa-plus"></i>CLICK</a></div>
        <div id="taskListHolder">
            <table id="taskList">
                <thead>
                    <tr>
                        <th>#</th><th><%= i18n('Title') %></th><th><%= i18n('Client')%></th><th><%= i18n('Duration') %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td><td></td><td></td><td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        </script>


        <!-- my bb app-->
        <script type="text/javascript" src="/js/bbApp/app.js"></script>
        <script type="text/javascript" src="/js/bbApp/UserModule.js"></script>
        <script type="text/javascript" src="/js/bbApp/BusinessModule.js"></script>
        <script type="text/javascript" src="/js/bbApp/TaskListModule.js"></script>

        <!-- lets start it -->
        <script type="text/javascript">
            var options = {};
            $(document).ready(function(){
                Billit.start(options);
            });
        </script>

